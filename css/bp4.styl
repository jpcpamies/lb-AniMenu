
section
	.llistaVisible
		display block
		margin 0 auto
		max-width 680px
		.event
			&:first-child
				margin-top 0px
.bgHeader
	.montsia
		background-size 100% 380px
		height 380px
		top 60px
.efectos
	.nit
		.contenedorCastell
			left 0px
			top -50px
			width 260px
			.castell
				background-size 350px auto
				height 250px
				left -50px
				position absolute
				top 305px
				width 350px
			.castellFosc
				background-image url(../img/castellFosc.png)
				background-repeat no-repeat
				background-size 350px auto
				height 250px
				left -50px
				position absolute
				top 305px
				width 350px
				animation animacionFosc 15s infinite
				-webkit-animation animacionFosc 15s infinite
		.estrellas
			.moverConstelacion
				.constelacion
					background-size 1000px auto
					height 900px
					left 50px
					top -100px
					width 1000px
.menu
	background none
	height 0
	.botones
		.botonMenu
			a
				text-decoration none
			.compartir
			.menuResizer
				display none
			.mapa
				background cielo
				border-radius 50%
				bottom 20px
				color rgba(#283148,1)
				font-size 1.15em
				height 50px
				line-height 2.15em
				position fixed
				right 20px
				text-align center
				width 50px
				&:after
					content '\e606'
					font-family icono
					font-size .9em
				&:active
					color rgba(white,.3)
	.resizer
		display none
	.social
		background none
		border-radius 4px
		border-top none
		bottom 10px
		display block
		height 120px
		left 10px 
		position fixed
		width 200px
		.botonSocial
			.facebook
				background none
				left 20px
				position relative
				top 20px
				width 100px
			.twitter
				left -110px
				position relative
				top 60px
@keyframes animacion
	0%
		opacity 0
	100%
		opacity 1
