section
	margin 0 0 100px 0
	position absolute
	z-index 0
	.llistaVisible
		animation animacionLlista 3s 1
		-webkit-animation animacionLlista 3s 1
		.event
			margin 0 .5em 1.8em 2em
			.detall
				border-bottom 3px solid rgba(white,1)
				padding 0 0 .2em .25em
