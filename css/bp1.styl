
section
	.event
		bottom 40px
		left 0px
		position relative
		overflow-y auto
		right 0px
		top 0px
		width 100%
		&:last-child
			margin 0 0 40px 0
		.detall
			color white
			border-bottom 3px solid rgba(white,.5)
			font-weight 300
			margin .85em .7em 1em 2.5em
			.hora
				float left
				font-size .9em
				margin .1em 0 0 0 
				width 100px
				.horaInici
					float left
					p
						&:after
							content ' -'
				.horaFi
					p
						&:after
							content 'h'
			.lloc
				font-size .7em
				letter-spacing .13em
				line-height 2em
				text-transform uppercase
				p
					&:after
						content '\e608'
						font-family icono
						margin 0 0 0 .2em
		.contingut
			margin 1em .7em 0em 2em
			.titolEvent
				font-weight 400
				margin -.7em 1.8em .7em .7em
				position relative
				p
					&:after
						content '\e600'
						font-family icono
						font-size 1.3em
						position absolute 
						right -20px
						top 0px
						// transform: rotateZ(180deg);
						// -ms-transform: rotateZ(180deg);
						// -webkit-transform: rotateZ(180deg);
			.detallEvent
				font-size .8em
				font-weight 300
				margin 1em -1em 0em 2em
				p
					&:after
						display none
	.llistaVisible
	margin .5em


.bg 
	@css {
		background: rgb(47,68,92);
		background: -moz-linear-gradient(top,  rgba(47,68,92,1) 0%, rgba(62,99,135,1) 51%, rgba(121,147,172,1) 91%);
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(47,68,92,1)), color-stop(51%,rgba(62,99,135,1)), color-stop(91%,rgba(121,147,172,1)));
		background: -webkit-linear-gradient(top,  rgba(47,68,92,1) 0%,rgba(62,99,135,1) 51%,rgba(121,147,172,1) 91%);
		background: -o-linear-gradient(top,  rgba(47,68,92,1) 0%,rgba(62,99,135,1) 51%,rgba(121,147,172,1) 91%);
		background: -ms-linear-gradient(top,  rgba(47,68,92,1) 0%,rgba(62,99,135,1) 51%,rgba(121,147,172,1) 91%);
		background: linear-gradient(to bottom,  rgba(47,68,92,1) 0%,rgba(62,99,135,1) 51%,rgba(121,147,172,1) 91%);
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#2f445c', endColorstr='#7993ac',GradientType=0 );
        }
	height 100%
	left 0
	position fixed
	top 0
	width 100%
	z-index -5

.calendar 
	color white
	position relative
	top -1em
	left 45%
.dia
	position relative
	top 5em
	left -5em
	font-size 1em
	animation animacionDia 3s 1
	-webkit-animation animacionDia 3s 1

.eventActual
	background rgba(black,.1)
	border-radius 4px
	color white
	display block
	font-size .9em
	font-weight 100
	height auto
	padding .2em .5em 1em .5em
	padding 1em 0 .5em 0
	position relative
	width 100%
	.event
		color white
		margin -.15em margenMovil .8em 100px
		.lloc
			color gris
			font-size .7em
			letter-spacing .13em
			margin .5em 0 0 0
			text-transform uppercase
			p
				&:after
					content '\e608'
					font-family icono
					margin 0 0 0 .2em
	.hora
		color white
		display inline-block
		float left
		font-size .73em
		font-weight 300
		margin 0 10px
		width 75px
		.horaInici
			float left
			p
				&:after
					content ' -'
		.horaFi
			float left
			p
				&:after
					content 'h'


.numero
	font-size 5em
	animation animacionNumero 3s 1
	-webkit-animation animacionNumero 3s 1

.boto
	.menu
		background rgba(black,.05)
		border-radius 50%
		top 12px 
		color rgba(white,.5)
		height 50px
		line-height 2.2em
		position fixed
		right 12px
		font-size 1.2em
		text-align center
		width 50px
		z-index 7
		animation animacionBoto .2s 1
		-webkit-animation animacionBoto .2s 1
		&:after
			content '\e601'
			font-family icono

.mes
	position relative
	top -2.2em
	left 3.5em
	font-size 1em
	animation animacionMes 3s 1
	-webkit-animation animacionMes 3s 1
	

.inici
	.boto
	.botoTrans
	.on
	.onTrans
	.off
	.offTrans
		display none

.botoOn
	.menu
		background rgba(black,.05)
		border-radius 50%
		top 12px 
		color rgba(white,.5)
		height 50px
		line-height 2.2em
		position fixed
		right 12px
		font-size 1.2em
		text-align center
		width 50px
		z-index 7
		&:after
			content '\e601'
			font-family icono	
	.mapa
		background rgba(white,.7)
		border-radius 50%
		top 12px 
		color rgba(black,.7)
		height 50px
		line-height 2.1em
		position fixed
		left 12px
		font-size 1.2em
		text-align center
		width 50px
		z-index 3
		animation animacionMapa .4s 1
		-webkit-animation animacionMapa .4s 1
		&:after
			content '\e602'
			font-family icono
		&:hover
			background rgba(black,.2)
			color white
			-webkit-transition: all .2s;
			transition: all .2s;
	.aumentar
		background rgba(white,.7)
		border-radius 50%
		top 75px 
		color rgba(black,.7)
		height 50px
		line-height 1.9em
		position fixed
		right 12px
		font-size 1.2em
		text-align center
		width 50px
		z-index 4
		animation animacionAumentar .4s 1
		-webkit-animation animacionAumentar .4s 1
		&:after
			content 'a'
			font-size 1.4em
			font-weight 300
		&:hover
			background rgba(black,.2)
			color white
			-webkit-transition: all .2s;
			transition: all .2s;
	.disminuir
		background rgba(white,.7)
		border-radius 50%
		top 140px 
		color rgba(black,.7)
		height 50px
		line-height 1.9em
		position fixed
		right 12px
		font-size 1.2em
		text-align center
		width 50px
		z-index 4
		animation animacionDisminuir .4s 1
		-webkit-animation animacionDisminuir .4s 1
		&:after
			content 'a'
			font-size .9em
			font-weight 300
		&:hover
			background rgba(black,.2)
			color white
			-webkit-transition: all .2s;
			transition: all .2s;

@keyframes animacionAumentar 
	0% 
		top 12px
		opacity 0
	100% 
		bottom 75px
		opacity 1

@keyframes animacionDia 
	0% 
		opacity 0
	50%
		opacity 1
	75%
		opacity 1
	100% 
		opacity 1

@keyframes animacionDisminuir
	0% 
		top 12px
		opacity 0
	100% 
		bottom 75px
		opacity 1

@keyframes animacionBoto 
	0% 
		opacity 0
	100% 
		opacity 1

@keyframes animacionNumero 
	0% 
		opacity 0
	50%
		opacity 0
	75%
		opacity 1
	100% 
		opacity 1

@keyframes animacionMapa 
	0% 
		left 180px
		opacity 0
	100% 
		left 12px
		opacity 1

@keyframes animacionMes 
	0% 
		opacity 0
	50%
		opacity 0
	75%
		opacity 0
	100% 
		opacity 1


		 
		
		










