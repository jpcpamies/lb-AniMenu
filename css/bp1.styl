			color white
			-webkit-transition: all .2s;
			transition: all .2s;

@keyframes animacionAumentar 
	0% 
		top 12px
		opacity 0
	100% 
		bottom 75px
		opacity 1

@keyframes animacionBg1 
	0% 
		opacity 0
		-webkit-filter blur(2px)
	50%
		opacity 1
	75%
		opacity .4
		-webkit-filter blur(6px)
	100% 
		opacity 1

@keyframes animacionBg2 
	0% 
		opacity 0
	50%
		opacity .7
	75%
		opacity .5
	100% 
		opacity 1

@keyframes animacionCalendari 
	0% 
		opacity 1
	50%
		opacity .8
	75%
		opacity .9
	100% 
		opacity 1

@keyframes animacionDia 
	0% 
		opacity 0
	50%
		opacity 1
	75%
		opacity 1
	100% 
		opacity 1

@keyframes animacionDisminuir
	0% 
		top 12px
		opacity 0
	100% 
		bottom 75px
		opacity 1

@keyframes animacionBoto 
	0% 
		opacity 0
	100% 
		opacity 1

@keyframes animacionLlista
	0% 
		opacity 0
	100% 
		opacity 1

@keyframes animacionNumero 
	0% 
		opacity 0
	50%
		opacity 0
	75%
		opacity 1
	100% 
		opacity 1

@keyframes animacionMapa 
	0% 
		left 180px
		opacity 0
	100% 
		left 12px
		opacity 1

@keyframes animacionMes 
	0% 
		opacity 0
	50%
		opacity 0
	75%
		opacity 0
	100% 
		opacity 1


		 
		
		










