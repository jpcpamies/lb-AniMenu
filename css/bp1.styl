
section
	margin 0 0 100px 0
	position absolute
	z-index 0
	.event
		margin 0 .5em 1.8em 2em
		.detall
			border-bottom 3px solid rgba(white,.5)
			padding 0 0 .2em .25em
			.hora
				float left
				width 100px
				color white
				display inline-block
				float left
				font-size .65em
				font-weight 300
				margin -1px 10px 0 -5px
