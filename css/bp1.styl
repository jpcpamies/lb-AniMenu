.calendar 
	color white
	height 100%
	left 0
	margin 0 auto
	position absolute 
	top 3em
	width 100%
	z-index 2

.dia
.numero
.mes
	color white
	display block
	line-height 1em
	position absolute
	z-index 4

.dia
	font-size 2em
	left 27%
	animation animacionDia 2.9s 1
	-webkit-animation animacionDia 2.9s 1

.eventActual
	border 1px solid white
	margin  15em .5em .5em .5em

.llistaVisible
	border 1px solid white
	margin .5em

.numero
	font-size 7.5em
	left 26%
	letter-spacing -15px
	top 35px
	animation animacionNumero 2.5s 1
	-webkit-animation animacionNumero 2.5s 1

.boto
	.menu
		background rgba(white,.7)
		border-radius 50%
		top 25px 
		color rgba(black,.7)
		height 50px
		line-height 2.2em
		position fixed
		right 25px
		font-size 1.2em
		text-align center
		width 50px
		z-index 7
		animation animacionOn 0s 1
		-webkit-animation animacionOn 0s 1
		&:after
			content '\e601'
			font-family icono	

